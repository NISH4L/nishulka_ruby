<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%= link_to 'Nishulka', root_path %> > Ad
    </div>
  </div>
</div>
<div class="container">
  <div>
    <button type="button">reply</button>
    posted <%= time_ago_in_words(@listing.created_at) %> ago
    <h1 class="listing-header"><%= @listing.title %></h1>
    <div class="box">
      <% if @listing.user = current_user %>
      <p><%= link_to 'edit', edit_listing_path %></p>
      <p><%= link_to 'delete', @listing, data: {confirm: "This permanently deletes your ad. Are you sure?" }, method: :delete %></p>
    <% end %>
    </div>
    <p><%= @listing.description %> </p>
  </div>
  <footer>
    <p>post id: <%= @listing.id %></p>
    <!-- time_ago_in_words is a ruby method that makes time more Eng readable format-->
    <p>posted <%= time_ago_in_words(@listing.created_at) %> ago</p>
  </footer>
</div>
