<%= javascript_include_tag 'listings.js' %>
<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%= link_to 'Nishulka', root_path %> > Edit Ad
    </div>
  </div>
</div>
<div class="container">
  <div id="contact-area">
    <!-- This is how you create a ruby form -->
    <%= form_for @listing do |a| %>
      <%= a.label :title %>
      <%= a.text_field :title %>
      <%= a.label :description %>
      <%= a.text_area :description %>
      <p>
      <%= a.label :category_id %>
      <%= a.select :category_id, Category.all.map { |a| [a.name, a.id]} %>
      </p>
      <p>
      <%= a.label :subcategory_id %>
      <%= a.select :subcategory_id, options_for_select([]) %>
      </p>
      <%= a.label :city %>
      <%= a.text_field :city %>
      <%= a.label :state %>
      <%= a.text_field :state %>
      <%= a.label :zipcode %>
      <%= a.text_field :zipcode, class: "zip-width", maxlength: "7" %>
      <%= a.submit class: "create-button" %>
    <% end %>
  </div>
</div>
