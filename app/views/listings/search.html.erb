<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%= link_to 'Nishulka', root_path %> > Search Results
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
     <div class="newest">newest</div>
     <div class="oldest">oldest</div>
     <div class="highest-price">highest-price</div>
     <div class="lowest-price">lowest-price</div>
   </div>
  <ul class="list-margin">
      <% if @listings.present? %>
      <!-- Defining listing to do @listings -->
      <% @listings.each do |listing| %>
      <li>
        <span>
          <!-- time formatting done to make it readable-->
          <%= listing.created_at.strftime('%b %d, %y') %>
        </span>
        <%= link_to listing.title, listing %> - (<%= listing.city %>, <%= listing.state %>)
      </li>
    <% end %>
    <% else %>
      <p> No Advertisements in this category </p>
    <% end %>
</div>
